{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ecom-task/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "plugins": [
      "@nestjs/swagger"
    ],
    "webpack": true,
    "tsConfigPath": "apps/ecom-task/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ecom-task",
  "projects": {
    "ecom-task": {
      "type": "application",
      "root": "apps/ecom-task",
      "entryFile": "main",
      "sourceRoot": "apps/ecom-task/src",
      "compilerOptions": {
        "tsConfigPath": "apps/ecom-task/tsconfig.app.json"
      }
    },
    "scheduler-microservice": {
      "type": "application",
      "root": "apps/scheduler-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/scheduler-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/scheduler-microservice/tsconfig.app.json"
      }
    },
    "core-library": {
      "type": "library",
      "root": "libs/core-library",
      "entryFile": "index",
      "sourceRoot": "libs/core-library/src",
      "compilerOptions": {
        "tsConfigPath": "libs/core-library/tsconfig.lib.json"
      }
    }
  }
}